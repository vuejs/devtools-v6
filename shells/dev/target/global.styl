@import "./common"

h1, h2
  font-weight: normal

h2
  color: $green
  font-size: 1.5em
  font-weight: 400
  margin: 0
  padding: 0.5em 0

p 
  color: $grey  
  margin: 0px

button
  background-color: $white
  color: $green
  font-size: 1em
  letter-spacing: 0.1em
  border-radius: 0.5em
  border: 1px solid $green
  margin: 1em 0em
  display: block
  width: 100%
  cursor: pointer
  padding: 0.2em 0em

button:focus, input:focus
  outline: none

.actions
  margin-top: 20px
  word-break: break-all

.box 
  width: 33%
  display: inline-block
  vertical-align: top
  box-sizing: border-box
  padding: 2em

  h2
    text-align: center